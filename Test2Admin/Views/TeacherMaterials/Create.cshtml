@model Test2Admin.Models.Material

@{
    ViewBag.Title = "Create";
}

<head>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <style>
        form_main {
            width: 100%;
        }

        .form_main h4 {
            font-family: roboto;
            font-size: 40px;
            font-weight: 300;
            margin-bottom: 15px;
            margin-top: 60px;
            text-transform: uppercase;
        }

        .heading {
            border-bottom: 1px solid #329688;
            padding-bottom: 9px;
            position: relative;
        }

            .heading span {
                background: #456c6b none repeat scroll 0 0;
                bottom: -2px;
                height: 3px;
                left: 0;
                position: absolute;
                width: 75px;
            }

        .form {
            border-radius: 7px;
            padding: 6px;
        }

        label {
            font-size: 15px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            margin: 15px;
        }

        body {
            width: 60%;
            margin: 50px;
        }

        select {
            position: relative;
            min-width: 300px;
            width: 25px;
            min-height: 40px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            color: #777;
            font-weight: 300;
            background-color: #fff;
            border-radius: 3px;
            transition: all 375ms ease-in-out;
            margin-left: 15px;
        }

        .btn {
            background: #ffffff;
            border-radius: 13px;
            font-family: Arial;
            color: #616161;
            font-size: 16px;
            padding: 10px 20px 10px 20px;
            border: solid #518f99 2px;
            text-decoration: none;
            float: left;
            margin-top: 15px;
            margin-left: -190px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.MaterialsID)
    <div class="form-main">
        <div class="form-horizontal">
            <h4 class="heading"><strong>Dodaj </strong> użytkownika <span></span></h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Artykuł</label><br/>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Articles, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Articles, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Słownik</label><br />
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Dictionary, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dictionary, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Dokument PDF ze słownictwem</label><br />
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DetailsDictionary, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DetailsDictionary, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <br />
                    @Html.DropDownList("UserID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zatwierdź" class="btn btn-default" />

                </div>
            </div>
        </div>
        </div>
        }
</body>