@using Test2Admin.Models
@model User
@{
    ViewBag.Title = "Log in";
}


<head>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        html {
            display: flex;
            justify-content: center;
            align-content: center;
            align-items: center;
            height: 100%;
            margin: 0;
            margin-top: 10px;
            padding: 0;
            background: rgb(186,236,236);
            background: radial-gradient(circle, rgba(186,236,236,0.9587185215883228) 0%, rgba(115,181,186,0.9363095580028886) 100%);
        }

        body {
            width: 40%;
            border-radius: 15px 40px;
            border-color: brown;
            border:2px;
        }



        input {
            width: 250px;
            height: 35px;
            font-size: 18px;
            border-radius: 4px;
            border: 0;
            margin-left:40px;
        }

        modal-content {
            background-color: white;
            opacity: .82;
            padding: 0 10px;
            border-radius: 13px;
        }


        select {
            position: relative;
            min-width: 300px;
            width: 40%;
            min-height: 40px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            color: #777;
            font-weight: 300;
            background-color: #fff;
            border-radius: 3px;
            transition: all 375ms ease-in-out;
            margin-left: 15px;
        }

        form-group {
            margin-bottom: 10px;
            margin-top: -40px;
        }


        label {
            margin: 10px;
            font-size: large;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }



        .btn {
            background: #ffffff;
            border-radius: 13px;
            font-family: Arial;
            color: #616161;
            font-size: 16px;
            padding: 10px 20px 10px 20px;
            border: solid #518f99 2px;
            text-decoration: none;
            margin-top: 15px;
            width:150px;
            text-align:center;

        }

        h2 {
            margin-top:20px;
            text-align:center;
            font-weight:bold;
            font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        .col-md-12 column {
            text-align: center;
            margin-left: 10px;
        }

            .col-md-12 column form {
                display: inline-block;
            }
      

        form {
            margin-top: 20px;
            margin-bottom: 50px;
            padding: 0;
            text-align: center;
            width:100%;
        }
    </style>
</head>
<body>
    <h2>Zaloguj się</h2>
    <hr />
    <div class="row mb-4">
        <div class="form col-md-12">
             <div class="col d-flex justify-content-center">
                @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <label>Adres e-mail</label>
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <label>Hasło</label>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        </div>
                    </div>
                 <br/>
                    <div class="form-group">

                        <select name="role" id="role" class="custom-select form-select form-select-lg mb-3">
                            <option value="student">Student</option>
                            <option value="teacher">Nauczyciel</option>
                            <option value="admin">Administrator</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <div class=""col-md-12 text-center">
                            <button type="submit" class="btn">Zaloguj się</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
